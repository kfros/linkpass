{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@core/*": ["packages/core-domain/*"],
      "@db/*": ["packages/db/*"],
      "@shared/*": ["packages/shared/*"],
      "@obs/*": ["packages/observability/*"]
    }
  }
}